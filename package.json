{
	"name": "telegram-ytdl",
	"module": "src/index.ts",
	"type": "module",
	"scripts": {
		"start": "tsx -r dotenv/config src/index.ts",
		"dev": "tsx watch -r dotenv/config src/index.ts",
		"build": "docker build -t telegram-ytdl .",
		"format": "biome format --write . ",
		"lint": "biome lint --write .",
		"check": "pnpm format && pnpm lint",
		"typecheck": "tsc --noEmit"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.8.1",
		"@types/express": "^5.0.0",
		"@types/node": "22",
		"dotenv": "^16.4.5",
		"tsx": "^4.15.7",
		"typescript": "^5.5.2"
	},
	"dependencies": {
		"@grammyjs/parse-mode": "^1.10.0",
		"@resync-tv/yt-dlp": "0.5.0",
		"croner": "^9.0.0",
		"express": "^4.19.2",
		"grammy": "^1.24.1",
		"openai": "^4.56.0"
	}
}
